<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="@drawable/rounded_corners_background_5">

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textColor="#0000e4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_title"
        android:textColor="#000000"
        android:text="By : "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_faculty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_title"
        android:layout_toRightOf="@id/text_by"
        android:text="Faculty Name "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text"
        android:layout_below="@id/message_title"
        android:layout_toRightOf="@id/text_faculty_name"
        android:text="(July 01, 2020)"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_by">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_text"
            android:textColor="#000000"
            android:layout_below="@id/text_by"
            android:text="Dear Students, due to Corona virus the college will  be closed util the govt permit...Exam are postponed.Stay connected for updates.Take care..."
            android:textSize="14sp" />
    </ScrollView>


</RelativeLayout>