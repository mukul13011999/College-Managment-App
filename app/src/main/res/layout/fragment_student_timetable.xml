<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_timetable">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/monday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Monday" />

                <ImageView
                    android:id="@+id/no_classes_0"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tuesday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Tuesday" />

                <ImageView
                    android:id="@+id/no_classes_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/wednesday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Wednesday" />

                <ImageView
                    android:id="@+id/no_classes_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/thursday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Thursday" />

                <ImageView
                    android:id="@+id/no_classes_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/friday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Friday" />

                <ImageView
                    android:id="@+id/no_classes_4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/saturday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Saturday" />

                <ImageView
                    android:id="@+id/no_classes_5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_background_4"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sunday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Sunday" />

                <ImageView
                    android:id="@+id/no_classes_6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/no_classes_today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
